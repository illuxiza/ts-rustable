{
  "include": ["packages", "types", "scripts", "src"],
  "compilerOptions": {
    "allowJs": false,
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "types": ["node", "jest"],
    "paths": {
      "@rustable/utils": ["packages/utils"],
      "@rustable/enum": ["packages/enum"],
      "@rustable/iter": ["packages/iter"],
      "@rustable/trait": ["packages/trait"],
      "@rustable/commons": ["packages/commons"],
    }
  }
}
